// Company
model company {
  id              String   @id @default(cuid())
  company_id      Int      @unique @default(autoincrement())
  company_name    String
  sub_domain      String   @unique
  currency_code   String
  currency_symbol String
  timezone        String   @default("UTC")
  first_name      String?
  last_name       String?
  phone           String?
  email           String?
  password        String?
  db_url          String
  is_active       Boolean  @default(true)
  company_logo    String?
  logo_name       String?
  logo_size       Int?
  roles           Json
  // roles         Role     @default(company)
  created_at      DateTime @default(now())
  updated_at      DateTime @default(now()) @updatedAt

  @@map("company")
}

model Service {
  id                      String     @id @default(cuid())
  exclude_inspection      Boolean    @default(false)
  invoice50               Boolean    @default(false)
  fob_china               Boolean    @default(false)
  require_deposit_invoice Boolean    @default(false)
  name                    String
  materials               Material[]
  finishes                Finish[]

  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt

  @@map("services")
}

model Material {
  id         String  @id @default(cuid())
  service_id String
  name       String?

  service Service @relation(fields: [service_id], references: [id], onDelete: Cascade)

  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt

  @@map("service_materials")
}

model Finish {
  id         String  @id @default(cuid())
  service_id String
  name       String?

  service Service @relation(fields: [service_id], references: [id], onDelete: Cascade)

  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt

  @@map("service_finishes")
}

// Currency
model currency {
  id          String   @id @default(cuid())
  currency_id Int      @default(autoincrement())
  code        String
  name        String
  symbol      String
  is_active   Boolean  @default(true)
  created_at  DateTime @default(now())
  updated_at  DateTime @default(now()) @updatedAt

  @@map("currency")
}

// Payment Terms
model payment_terms {
  id               String   @id @default(cuid())
  payment_terms_id Int      @default(autoincrement())
  name             String
  description      String?
  due_days         Int      @default(0)
  discount_days    Int      @default(0)
  discount_percent Decimal  @default(0)
  is_active        Boolean  @default(true)
  created_at       DateTime @default(now())
  updated_at       DateTime @default(now()) @updatedAt

  @@map("payment_terms")
}

model PaymentStatus {
  id         String   @id @default(cuid())
  name       String
  is_active  Boolean  @default(true)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

