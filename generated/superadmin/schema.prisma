model vendor_capabilities {
  id         String   @id @default(cuid())
  name       String
  is_active  Boolean  @default(true)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  subCategories vendor_capability_sub_categories[]

  @@map("vendor_capabilities")
}

model vendor_capability_sub_categories {
  id                   String   @id @default(cuid())
  name                 String
  vendor_capability_id String
  is_active            Boolean  @default(true)
  created_at           DateTime @default(now())
  updated_at           DateTime @updatedAt

  capability vendor_capabilities @relation(fields: [vendor_capability_id], references: [id], onDelete: Cascade)

  @@map("vendor_capability_sub_categories")
}

